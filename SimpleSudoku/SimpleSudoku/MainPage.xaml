    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition  MinWidth="150"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="1" Text="Main Menu"  HorizontalAlignment="Center" Margin="0,30" FontSize="42"/>
        <TextBlock Text="&lt;Username>" Grid.Row="0" Grid.Column="2" Margin="0,10,10,10"  FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        
        
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Text="Continue Puzzle" HorizontalAlignment="Center" Margin="0,5" FontSize="28"/>
            <TextBlock Text="New Puzzle" HorizontalAlignment="Center" Margin="0,5" FontSize="28"/>
            <TextBlock Text="Leaderboard" HorizontalAlignment="Center" Margin="0,5" FontSize="28"/>
            <TextBlock Text="Options" HorizontalAlignment="Center" Margin="0,5" FontSize="28"/>
        </StackPanel>
    </Grid>
</Page>

